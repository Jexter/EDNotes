<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myapps.alex.se.ednotes.fragments.SystemNotesFragment">

    <ScrollView
        android:id="@+id/notes_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_five"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp">

        <EditText
            android:id="@+id/notes_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="textNoSuggestions|textMultiLine|textCapSentences"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@drawable/notes_cursor" />


    </ScrollView>


</LinearLayout>
