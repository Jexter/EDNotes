<?xml version="1.0" encoding="utf-8"?>
   	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/system_container"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
        android:layout_margin="@dimen/item_outer_margin"
        android:background="@drawable/row_background_selector"
    >


            <LinearLayout
                android:id="@+id/system_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/item_inner_padding"
            >
                <TextView
                    android:id="@+id/station_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_big"
                    android:textColor="@color/color_four"
                    android:gravity="left"
                />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/blackmarket_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_tiny"
                    android:layout_marginRight="@dimen/item_inner_padding"
                    android:textColor="@color/color_six"
                    android:text="BM"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/station_type_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/item_inner_padding"
                    android:layout_gravity="center_vertical"
                />

        </LinearLayout>
	</LinearLayout>
