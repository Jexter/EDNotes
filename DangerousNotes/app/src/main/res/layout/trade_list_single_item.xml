<?xml version="1.0" encoding="utf-8"?>
   	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/system_container"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
        android:layout_margin="@dimen/item_outer_margin"
        android:background="@color/color_three"
    >


            <LinearLayout
                android:id="@+id/outer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/item_inner_padding"

            >
                <LinearLayout
                    android:id="@+id/fromstation_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                >
                    <TextView
                        android:id="@+id/fromstation_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_medium"
                        android:textColor="@color/color_four"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/row_background_selector"

                    />
                    <ImageView
                        android:id="@+id/fromstation_type_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/inner_item_spacing"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/trade_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trade_arrow"
                        android:layout_gravity="left|center_vertical"/>

                    <TextView
                        android:id="@+id/commodity_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_small"
                        android:textColor="@color/color_blue"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/inner_item_spacing"
                        />
                    <TextView
                        android:id="@+id/profit_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_small"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_one"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tostation_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                >
                    <TextView
                        android:id="@+id/tostation_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_medium"
                        android:textColor="@color/color_four"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/row_background_selector"
                        />
                    <ImageView
                        android:id="@+id/tostation_type_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
        </LinearLayout>
	</LinearLayout>
